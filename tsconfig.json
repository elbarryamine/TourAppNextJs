{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "typeRoots": ["src/common/types"],
    "paths": {
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "styles/*": ["styles/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "next.config.js",
    "src/*",
    "src/common/utils",
    "src/common/types",
    "src/common/redux",
    "src/common/provider",
    "src/common/api",
    "src/common/hooks",
    "src/common/provider"
  ],
  "exclude": ["node_modules", ".next", "./node_modules", "./node_modules/*", "./node_modules/@types/node/index.d.ts"]
}
